<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pro_feature_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"

    app:strokeWidth="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="6dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="6dp"
                app:strokeWidth="0.5dp"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/icon_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:src="@mipmap/ic_launcher" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:gravity="center|start"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/ad_indicator_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:text="Ad"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="1dp"
                        android:background="@drawable/bg_price"
                        android:textColor="?colorPrimary"/>

                    <TextView
                        android:id="@+id/title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="Pandora" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/star_rating_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"/>

                <TextView
                    android:id="@+id/advertiser_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="pandora.com"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/options_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top"/>
        </LinearLayout>

        <!-- Body Text -->
        <TextView
            android:id="@+id/body_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="13sp"
            android:paddingHorizontal="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="6dp"
            tools:text="A personalized listening experience that continually evolves with your tastes." />

        <!-- Media View -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">
            <FrameLayout
                android:id="@+id/media_view_container"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>
        </FrameLayout>

        <!-- CTA Button -->
        <Button
            android:id="@+id/cta_button"
            style="@style/ThemeOverlay.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="6dp"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:text="Install" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>