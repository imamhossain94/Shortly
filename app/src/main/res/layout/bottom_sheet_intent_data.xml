<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:roundedCorners="none"
    android:background="@color/oui_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/intent_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:textSize="16sp"
            android:maxLines="5"
            android:ellipsize="end"
            android:textColor="@color/oui_unclickablepref_text_color"
            android:fontFamily="@string/sesl_font_family_regular"/>

    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="15dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shorten_button"
            style="@style/OneUI.ButtonStyleOutline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="5dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Shorten URL" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/expand_button"
            style="@style/OneUI.ButtonStyleOutline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="0dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Expand URL" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
